<div> 
    <div class="d-flex flex-row" id="lobby-container">
        @foreach (string user in Images)
        {
            <div>
                <img src="@user"/>
            </div>
        }
        
    </div>
</div>

@code {
    [Parameter] public int NumPlayers { get; set; }
    [Parameter] public int MissingPlayers { get; set; }
    public List<string> Images { get; set; } = new List<string>();

    protected override void OnInitialized()
    {
        CreateImages();
    }
    private void CreateImages()
    {
        Images.Clear();
        for (int i = 0; i < NumPlayers+MissingPlayers; i++)
        {
            if (i < NumPlayers)
            {
                Images.Add("/img/user.svg");
            }
            else
            {
                Images.Add("/img/unoccupied-user.svg");
            }

        }
    }
}